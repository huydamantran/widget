<body>

  <div class="wrapper">

    <!-- Start Gmail Icon -->
    <div id="gmail" onclick="navigate(this.id)" class="social gmail">
      <span class="icon email"><i class="fas fa-envelope"></i></span>
    </div>
    <!-- End Gmail Icon -->

    <!-- Start Outlook Icon -->
    <div id="outlook" onclick="navigate(this.id)" class="social outlook">
      <span class="icon outlook"><i class="fa-brands fa-microsoft"></i></span>
    </div>
    <!-- End Outlook Icon -->

    <!-- Start Slack Icon -->
    <div id="slack" onclick="navigate(this.id)" class="social slack">
      <span class="icon slack"><i class="fa-brands fa-slack"></i></span>
    </div>
    <!-- End Slack Icon -->

    <!-- Start Google Drive Icon -->
    <div id="google-drive" onclick="navigate(this.id)" class="social google-drive">
      <span class="icon google-drive"><i class="fa-brands fa-google-drive"></i></span>
    </div>
    <!-- End Google Drive Icon -->

    <!-- Start Google Keep Icon -->
    <div id="google-keep" onclick="navigate(this.id)" class="social google-keep">
      <span class="icon google-keep"><i class="fa-solid fa-lightbulb"></i></span>
    </div>
    <!-- End Google Keep Icon -->

    <!-- Start ChatGPT Icon -->
    <div id="chatgpt" onclick="navigate(this.id)" class="social chatgpt">
      <span class="icon chatgpt"><i class="fa-solid fa-robot"></i></span>
    </div>
    <!-- End ChatGPT Icon -->

  </div>

  <script>
    function navigate(id) {
      let url;

      switch (id) {
        case "gmail":
          url = "mailto:huy@traninsuranceagency.com";
          break;
        case "outlook":
          url = "mailto:htran@farmersagent.com";
          break;
        case "slack":
          url = "https://app.slack.com/client/";
          break;
        case "google-drive":
          url = "https://drive.google.com/drive/home";
          break;
        case "google-keep":
          url = "https://keep.google.com/";
          break;
        case "chatgpt":
          url = "https://chat.openai.com/";
          break;
        default:
          console.log("Invalid ID: " + id);
          return;
      }

      window.open(url, '_blank').focus(); // Opens the link in a new tab
    }
  </script>

